<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-image: url("images/alps_darkened.png");
            background-size: cover;
            font: 20px "Montserrat", sans-serif;
            color: #f5f6f7;
        }

        .form_div {
            background-color: rgba(255, 255, 255, 0.5);
        }

        input {
            background-color: rgba(255, 255, 255, 0.0);
            border: 1px solid white;
            border-radius: 5%;
        }

        .form-group {
            margin-top: 5%;
        }

        form {
            padding-left: 0%;
        }

        .container {
            margin-top: 5%;
            border-radius: 2%;
            padding: 5%;
            padding-bottom: 3%;
        }

        .btn {
            background-color: rgba(255, 255, 255, 0.5);
            border-color: rgba(255, 255, 255, 0.5);
            color: black;
        }

        .btn:active, .btn-primary:active:focus, .btn-primary:active:hover  {
            background-color: rgba(0, 0, 0, 0.9);
            border-color: rgba(0, 0, 0, 0.9);
            color: rgba(255, 255, 255);
        }

        .btn:hover {
            background-color: rgba(0, 0, 0, 0.5);
            border-color: rgba(0, 0, 0, 0.5);
            color: rgba(255, 255, 255);
        }

        .login {
            margin-top: 7%;
        }

        .login_redirect {
            margin-top: 5%;
        }

    </style>

    <script>
        const take_to_login = () => {
            window.open("http://localhost:3000/login", "_blank");
        }
    </script>
</head>


<% if (messages.error) { %>
<%= messages.error %>
<% } %>

<div class="container text-center form_div col-lg-5">
    <h1>Register</h1>
    <form action="/register" method="POST">

        <div class="form-group row">
            <label for="username" class="col-lg-5 col-form-label">Name</label>
            <input class="col-lg-5" type="text" id="username" name="username" required>
        </div>

        <div class="form-group row">
            <label for="email" class="col-lg-5 col-form-label">Email</label>
            <input class="col-lg-5" type="email" id="email" name="email" required>
        </div>

        <div class="form-group row">
            <label for="password" class="col-lg-5 col-form-label">Pasword</label>
            <input class="col-lg-5" type="password" id="password" name="password" required>
        </div>

        <button class="btn btn-primary login" type="submit">Register</button>
        <br />
        <button class="btn btn-primary login_redirect" onclick="take_to_login()">Login Instead</button>
    </form>
</div>
